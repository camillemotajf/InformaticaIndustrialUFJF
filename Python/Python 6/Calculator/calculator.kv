#:kivy 1.11.1
<MyWidget>:
    cols: 1
    padding: 10
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 100
        Label:
            id: display
            text: "0"
            font_size: 40
            halign: 'right'
            valign: 'middle'
            text_size: self.size
    GridLayout:
        cols: 4
        Button:
            text:'7'
            on_press: root.add_input('7')
        Button:
            text:'8'
            on_press: root.add_input('8')
        Button:
            text:'9'
            on_press: root.add_input('9')
        Button:
            text:'+'
            background_color: (235, 169, 57, 1)
            color: (0, 0, 0, 1)
            on_press: root.add_input('+')
        Button:
            text:'4'
            on_press: root.add_input('4')
        Button:
            text:'5' 
            on_press: root.add_input('5')                               
        Button:
            text:'6'
            on_press: root.add_input('6')
        Button:
            text:'-'
            background_color: (235, 169, 57, 1)
            color: (0, 0, 0, 1)
            on_press: root.add_input('-')
        Button:
            text:'1'
            on_press: root.add_input('1')
        Button:
            text:'2'
            on_press: root.add_input('2')
        Button:
            text:'3'
            on_press: root.add_input('3')
        Button:
            text:'*'
            background_color: (235, 169, 57, 1)
            color: (0, 0, 0, 1)
            on_press: root.add_input('*')
        Button:
            text:'C'
            on_press: root.delete_last()
        Button:
            text:'0'
            on_press: root.add_input('0')
        Button:
            text:'DEL'
            on_press: root.clear_display()
        Button:
            text:'/'
            background_color: (235, 169, 57, 1)
            color: (0, 0, 0, 1)
            on_press: root.add_input('/')

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.2)
        Button:
            size_hint: (3, 1)
            text:'='
            on_press: root.calculate_result()
        Button:
            text:'.'
            background_color:(235, 169, 57, 1)
            color: (0, 0, 0, 1)
            on_press: root.add_input(self.text)

       
        
